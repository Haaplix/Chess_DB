<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="350"
        x:Class="Chess_DB.Views.AddMtoCWindow"
        Title="AddMtoCWindow"
        Width="750" Height="450"
        WindowStartupLocation="CenterOwner"
        ExtendClientAreaToDecorationsHint="True"
        CanResize="False">
  <Window.Styles>
		<Style Selector="TextBox">
			<Setter Property="Foreground" Value="#D7D9CE" />
                        <Setter Property="Background" Value="#226D68" />
		</Style>
		<Style Selector="TextBox:pointerover">
				<Setter Property="Foreground" Value="#D7D9CE" />
			<Style Selector="^ /template/ Border#PART_BorderElement">
				<Setter Property="BorderBrush" Value="#2c8f88"/>
				<Setter Property="Background" Value="#2c8f88" />
			</Style>

			<Style Selector="^ /template/ TextBlock#PART_Watermark">
				<Setter Property="Foreground" Value="#D7D9CE" />
			</Style>
		</Style>

		<Style Selector="TextBox:focus">
			<Setter Property="Foreground" Value="#144039" />

			<Style Selector="^ /template/ TextBlock#PART_Watermark">
				<Setter Property="Foreground" Value="#144039" />
			</Style>
			<Style Selector="^ /template/ Border#PART_BorderElement">
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="BorderBrush" Value="#144039"/>
				<Setter Property="BorderThickness" Value="1" />
			</Style>
		</Style>
		<Style Selector="Button">
				<Setter Property="Background" Value="#144039" />
				<Setter Property="Foreground" Value="#D7D9CE" />
		</Style>
		<Style Selector="Button:pointerover /template/ ContentPresenter">
				<Setter Property="Background" Value="#226D68"></Setter>
				<Setter Property="Foreground" Value="#D7D9CE" />
		</Style>
		<Style Selector="Button:pressed /template/ ContentPresenter">
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="Foreground" Value="#144039" />
		</Style>
	</Window.Styles>
  <StackPanel Spacing ="5"
					Background ="#D7D9CE"
					TextElement.Foreground="#144039"
					>

    <TextBlock Text="ADD A MATCH TO COMPETITION" Margin="5" Padding="5" FontWeight="Bold" FontSize="30" TextAlignment="Center"/>
    
  </StackPanel>
</Window>
