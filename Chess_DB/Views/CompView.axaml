<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Chess_DB.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Chess_DB.Views.CompView"
             x:DataType="vm:CompViewModel">
			 <UserControl.Styles>
				<Style Selector="TextBox">
					<Setter Property="Foreground" Value="#D7D9CE" />
					<Setter Property="Background" Value="#226D68" />
				</Style>
				<Style Selector="TextBox:pointerover">
						<Setter Property="Foreground" Value="#D7D9CE" />
					<Style Selector="^ /template/ Border#PART_BorderElement">
						<Setter Property="BorderBrush" Value="#2c8f88"/>
						<Setter Property="Background" Value="#2c8f88" />
					</Style>

					<Style Selector="^ /template/ TextBlock#PART_Watermark">
						<Setter Property="Foreground" Value="#D7D9CE" />
					</Style>
				</Style>

				<Style Selector="TextBox:focus">
					<Setter Property="Foreground" Value="#144039" />

					<Style Selector="^ /template/ TextBlock#PART_Watermark">
						<Setter Property="Foreground" Value="#144039" />
					</Style>
					<Style Selector="^ /template/ Border#PART_BorderElement">
						<Setter Property="Background" Value="Transparent"/>
						<Setter Property="BorderBrush" Value="#144039"/>
						<Setter Property="BorderThickness" Value="1" />
					</Style>
				</Style>
				<Style Selector="Button">
						<Setter Property="Background" Value="#144039" />
						<Setter Property="Foreground" Value="#D7D9CE" />
				</Style>
				<Style Selector="Button:pointerover /template/ ContentPresenter">
						<Setter Property="Background" Value="#226D68"></Setter>
						<Setter Property="Foreground" Value="#D7D9CE" />
				</Style>
				<Style Selector="Button:pressed /template/ ContentPresenter">
						<Setter Property="Background" Value="Transparent" />
						<Setter Property="Foreground" Value="#144039" />
				</Style>
			</UserControl.Styles>
	<ScrollViewer>
	<StackPanel>
		<DockPanel LastChildFill="True">

		<Grid Background="#D7D9CE" Margin="5" TextElement.Foreground="#144039">
					<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
					</Grid.RowDefinitions>

					<TextBlock Grid.Row="0"
							Text="{Binding CompName}"
							FontWeight="Bold" FontSize="40"
							HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Margin="0,10,0,5"/>
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
					<Button Command="{Binding OpendWindowEditCompCommand}"
							Margin="5,10,5,5"
							Padding="5"
							FontWeight="Bold" FontSize="23" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="120" >
							EDIT
					</Button>
					<Button Command="{Binding EditcompCommand}"
							Margin="5,10,5,5"
							Padding="5"
							FontWeight="Bold" FontSize="23" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="120" >
							UPDATE
					</Button>
					</StackPanel>

					<StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5,0,10" Spacing="10">
						<TextBlock Text="Location:" FontWeight="Bold" FontSize="25"/>
						<TextBlock FontSize="25">
							<TextBlock.Text>
								<MultiBinding StringFormat="{}{0}, {1}">
									<Binding Path="City"/>
									<Binding Path="Country"/>
								</MultiBinding>
							</TextBlock.Text>
						</TextBlock>

					<TextBlock Text="| Date:" FontWeight="Bold" FontSize="25"/>
					<TextBlock Text="{Binding Date, StringFormat={}{0:dd/MM/yyyy}}" FontSize="25"/>

					</StackPanel>
			</Grid>   
		</DockPanel>
		<TextBlock Grid.Row="0" TextElement.Foreground="#144039"
                            Text="PLAYERS IN THE COMPETITION:"
                            FontWeight="Bold"
                            FontSize="25"
                            HorizontalAlignment="Left"
							TextDecorations = "Underline"
                            Margin="5"/>
		<StackPanel Orientation="Horizontal">
		<ScrollViewer VerticalScrollBarVisibility="Auto" Height="350" Width="850" HorizontalAlignment="Left">
			<ItemsControl ItemsSource="{Binding PlayerList}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
				<Button  Padding="20" Margin="5" HorizontalAlignment="Stretch">
					<DockPanel LastChildFill="True">

					<!-- Left side: Firstname + Lastname -->
					<StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
						<TextBlock Text="{Binding Firstname}" FontSize="30" FontWeight="Bold"/>
						<TextBlock Text="{Binding Lastname}" FontSize="30" FontWeight="Bold" Margin="10,0,0,0"/>
					</StackPanel>

					<StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
						<TextBlock Margin="10,0,0,0" FontSize="25">
						<Run Text="ELO: " />
						<Run Text="{Binding ELO}" />
						</TextBlock>
						<TextBlock Margin="10,0,0,0" FontSize="25">
						<Run Text="ID: " />
						<Run Text="{Binding PlayerID}" />
						</TextBlock>
					</StackPanel>
					</DockPanel>
				</Button>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
		
		<Button Command="{Binding OpendWindowAddPtoCCommand}"
				HorizontalAlignment="Right"
				Margin="5,10,5,5"
				Padding="5"
				FontWeight="Bold" FontSize="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="75" Height="345" >
				+
		</Button>
		</StackPanel>
		<TextBlock Grid.Row="0" TextElement.Foreground="#144039"
                            Text="MATCHES IN THE COMPETITION:"
                            FontWeight="Bold"
                            FontSize="25"
                            HorizontalAlignment="Left"
							TextDecorations = "Underline"
                            Margin="5"/>
		<StackPanel Orientation="Horizontal">
		<ScrollViewer VerticalScrollBarVisibility="Auto" Height="350" Width="850" HorizontalAlignment="Left">
			<ItemsControl ItemsSource="{Binding PlayerList}">
			<ItemsControl.ItemTemplate>
				<DataTemplate>
				<Button  Padding="20" Margin="5" HorizontalAlignment="Stretch">
					<DockPanel LastChildFill="True">

					<!-- Left side: Firstname + Lastname -->
					<StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
						<TextBlock Text="{Binding Firstname}" FontSize="30" FontWeight="Bold"/>
						<TextBlock Text="{Binding Lastname}" FontSize="30" FontWeight="Bold" Margin="10,0,0,0"/>
					</StackPanel>

					<StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
						<TextBlock Margin="10,0,0,0" FontSize="20">
						<Run Text="ELO: " />
						<Run Text="{Binding ELO}" />
						</TextBlock>
						<TextBlock Margin="10,0,0,0" FontSize="20">
						<Run Text="ID: " />
						<Run Text="{Binding PlayerID}" />
						</TextBlock>
					</StackPanel>
					</DockPanel>
				</Button>
				</DataTemplate>
			</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
		<Button Command="{Binding OpendWindowAddMtoCCommand}"
				HorizontalAlignment="Right"
				Margin="5,10,5,5"
				Padding="5"
				FontWeight="Bold" FontSize="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="75" Height="345" >
				+
		</Button>
		</StackPanel>
	</StackPanel>
	</ScrollViewer>
</UserControl>
