<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Chess_DB.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Chess_DB.Views.CompView"
             x:DataType="vm:CompViewModel">
  <DockPanel LastChildFill="True">

	<Grid Background="#D7D9CE" Margin="5" TextElement.Foreground="#144039">
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                </Grid.RowDefinitions>



                <Button Grid.Row="0"
						Command=""
                        Margin="5,10,5,5"	
                        Padding="5"
                        FontWeight="Bold" FontSize="23" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="40" >
                </Button>

				<TextBlock Grid.Row="0"
						   Text="{Binding CompName}"
						   FontWeight="Bold" FontSize="40"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"
						   Margin="0,10,0,5"/>

				<StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10" Spacing="10">
					<TextBlock Text="Location:" FontWeight="Bold" FontSize="20"/>
					<TextBlock FontSize="20">
    					<TextBlock.Text>
							<MultiBinding StringFormat="{}{0}, {1}">
								<Binding Path="City"/>
								<Binding Path="Country"/>
							</MultiBinding>
						</TextBlock.Text>
					</TextBlock>

					<TextBlock Text="| Date:" FontWeight="Bold" FontSize="20"/>
					<TextBlock Text="{Binding Date}" FontSize="20"/>

				</StackPanel>
			
        </Grid>
        

    </DockPanel>
</UserControl>
