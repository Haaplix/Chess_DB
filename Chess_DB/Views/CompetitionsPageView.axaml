<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Chess_DB.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Chess_DB.Views.CompetitionsPageView"
        x:DataType="vm:CompetitionsPageViewModel">     
        
        <Grid Background="#D7D9CE" Margin="5" TextElement.Foreground="#144039">

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Title -->
    <TextBlock Grid.Row="0"
               Text="COMPETITIONS"
               FontWeight="Bold"
               FontSize="40"
               HorizontalAlignment="Center"
               Margin="5"/>

    <!-- Button aligned to top-right -->
    <Button Grid.Row="0"
            Command="{Binding OpendWindowAddCompetitionCommand}"
            HorizontalAlignment="Right"
            Margin="5,35,5,5"
            Padding="5"
            FontWeight="Bold"
            FontSize="23"
            Width="40">
        +
        <Button.Styles>
            <Style Selector="Button">
                <Setter Property="Background" Value="#144039" />
                <Setter Property="Foreground" Value="#D7D9CE" />
            </Style>
            <Style Selector="Button:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="#226D68" />
                <Setter Property="Foreground" Value="#D7D9CE" />
            </Style>
            <Style Selector="Button:pressed /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="#144039" />
            </Style>
        </Button.Styles>
    </Button>

    <!-- StackPanel MUST BE INSIDE THE GRID -->
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
        <TextBlock Text="List of all competitions:" FontSize="20" FontWeight="Bold" Margin="0,0,10,0"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="430">
            <ItemsControl ItemsSource="{Binding CompList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Padding="20" Margin="5" HorizontalAlignment="Stretch">
                            <DockPanel LastChildFill="True">
                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                    <TextBlock Text="" FontSize="30" FontWeight="Bold"/>
                                    <TextBlock Text="" FontSize="30" FontWeight="Bold" Margin="10,0,0,0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                                    <TextBlock Margin="10,0,0,0" FontSize="20">
                                        <Run Text="ID: " />
                                        <Run Text="" />
                                    </TextBlock>
                                </StackPanel>
                            </DockPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>

</Grid> <!-- <<< Now it's correctly closed -->


</UserControl>