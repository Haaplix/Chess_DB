<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Chess_DB.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Chess_DB.Views.MatchView"
             x:DataType="vm:MatchViewModel">

        <UserControl.Styles>
                <Style Selector="TextBox">
                        <Setter Property="Foreground" Value="#D7D9CE" />
                        <Setter Property="Background" Value="#226D68" />
                </Style>
                <Style Selector="TextBox:pointerover">
                        <Setter Property="Foreground" Value="#D7D9CE" />

                <Style Selector="^ /template/ Border#PART_BorderElement">
                        <Setter Property="BorderBrush" Value="#2c8f88"/>
                        <Setter Property="Background" Value="#2c8f88" />
                </Style>

                <Style Selector="^ /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="#D7D9CE" />
                </Style>
                </Style>

                <Style Selector="TextBox:focus">
                <Setter Property="Foreground" Value="#144039" />

                <Style Selector="^ /template/ TextBlock#PART_Watermark">
                        <Setter Property="Foreground" Value="#144039" />
                </Style>

                <Style Selector="^ /template/ Border#PART_BorderElement">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="#144039"/>
                        <Setter Property="BorderThickness" Value="1" />
                </Style>
                </Style>
                <Style Selector="Button">
                        <Setter Property="Background" Value="#144039" />
                        <Setter Property="Foreground" Value="#D7D9CE" />
                </Style>
                <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#226D68"></Setter>
                        <Setter Property="Foreground" Value="#D7D9CE" />
                </Style>
                <Style Selector="Button:pressed /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="#144039" />
                </Style>
	</UserControl.Styles>
  <StackPanel>
        <DockPanel LastChildFill="True" TextElement.Foreground="#144039">
                <StackPanel>
                        <Grid Background="#D7D9CE" Margin="5" TextElement.Foreground="#144039">
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>


                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Grid.Row="0"
                                                FontWeight="Bold"
                                                FontSize="30"
                                                HorizontalAlignment="Center"
                                                Margin="10">
                                            <Run Text="{Binding Player1.Firstname}"  />
                                            <Run Text="{Binding Player1.Lastname}" />
                                        </TextBlock>
                                        <TextBlock Text="   VS   " FontSize="30" FontWeight="Bold" Margin="0,10,0,0"/>
                                        <TextBlock Grid.Row="0"
                                                FontWeight="Bold"
                                                FontSize="30"
                                                HorizontalAlignment="Center"
                                                Margin="10">
                                            <Run Text="{Binding Player2.Firstname}"  />
                                            <Run Text="{Binding Player2.Lastname}" />
                                        </TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Command="{Binding OpendWindowEditMatchCommand}"
							Margin="40,10,5,5"
							Padding="5"
							FontWeight="Bold" FontSize="23" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="120" >
							EDIT
					</Button>
                                        </StackPanel>
                                

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,5,0,10" Spacing="10">
                                        <TextBlock Text="ELO:" FontWeight="Bold" FontSize="25">
                                        <Run Text="{Binding Player1.ELO}" />
                                        </TextBlock>
                                        <TextBlock Text="| ELO:" FontWeight="Bold" FontSize="25">
                                        <Run Text="{Binding Player2.ELO}" />
                                        </TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,5,0,10" Spacing="10">
                                        <TextBlock Margin="7,0,0,0" FontSize="25" FontWeight="Bold">
						<Run Text="Winner: " />
						<Run Text="{Binding Winner.Firstname}" />
						<Run Text="{Binding Winner.Lastname}" />
					</TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,50,0,10" Spacing="10" HorizontalAlignment="Center">
                                  <TextBlock 
                                    FontWeight="Bold" FontSize="30" Margin="0,-4,0,0">
                                    <Run Text="{Binding Competition.CompName}"/>
                                    <Run Text=":  "/> 
                                  </TextBlock>
                                  <TextBlock Text="Location:" FontWeight="Bold" FontSize="25"/>
                                  <TextBlock FontSize="25">
                                    <TextBlock.Text>
                                      <MultiBinding StringFormat="{}{0}, {1}">
                                        <Binding Path="Competition.City"/>
                                        <Binding Path="Competition.Country"/>
                                      </MultiBinding>
                                    </TextBlock.Text>
                                  </TextBlock>
                                  <TextBlock Text="| Date:" FontWeight="Bold" FontSize="25"/>
                                  <TextBlock Text="{Binding Competition.Date, StringFormat={}{0:dd/MM/yyyy}}" FontSize="25"/>
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding PlayedPieces}"
                                        Grid.Row="4"
                                        Margin="0,100,0,10"
                                        HorizontalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                        <TextBlock Text="{Binding}" Margin="5,5" FontSize="25" />
                                        </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                </ItemsControl>
                        </Grid>
                </StackPanel>
        </DockPanel> 
    </StackPanel>
</UserControl>
