<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Chess_DB.ViewModels"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="350"
        x:Class="Chess_DB.Views.EditMatchView"
        Title="EditMatchView"
        Width="750" Height="450"
        WindowStartupLocation="CenterOwner"
        ExtendClientAreaToDecorationsHint="True"
        CanResize="False"
        x:DataType="vm:MatchViewModel">
  <Window.Styles>
		<Style Selector="TextBox">
			<Setter Property="Foreground" Value="#D7D9CE" />
                        <Setter Property="Background" Value="#226D68" />
		</Style>
		<Style Selector="TextBox:pointerover">
				<Setter Property="Foreground" Value="#D7D9CE" />
			<Style Selector="^ /template/ Border#PART_BorderElement">
				<Setter Property="BorderBrush" Value="#2c8f88"/>
				<Setter Property="Background" Value="#2c8f88" />
			</Style>

			<Style Selector="^ /template/ TextBlock#PART_Watermark">
				<Setter Property="Foreground" Value="#D7D9CE" />
			</Style>
		</Style>

		<Style Selector="TextBox:focus">
			<Setter Property="Foreground" Value="#144039" />

			<Style Selector="^ /template/ TextBlock#PART_Watermark">
				<Setter Property="Foreground" Value="#144039" />
			</Style>
			<Style Selector="^ /template/ Border#PART_BorderElement">
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="BorderBrush" Value="#144039"/>
				<Setter Property="BorderThickness" Value="1" />
			</Style>
		</Style>
		<Style Selector="Button">
				<Setter Property="Background" Value="#144039" />
				<Setter Property="Foreground" Value="#D7D9CE" />
		</Style>
		<Style Selector="Button:pointerover /template/ ContentPresenter">
				<Setter Property="Background" Value="#226D68"></Setter>
				<Setter Property="Foreground" Value="#D7D9CE" />
		</Style>
		<Style Selector="Button:pressed /template/ ContentPresenter">
				<Setter Property="Background" Value="Transparent" />
				<Setter Property="Foreground" Value="#144039" />
		</Style>
	</Window.Styles>
  <StackPanel Spacing ="5"
					Background ="#D7D9CE"
					TextElement.Foreground="#144039"
					>
    <Grid RowDefinitions="Auto, *">
        <!-- Header/Title Bar Row -->
        <TextBlock Text="EDIT MATCH" Margin="5" Padding="5" FontWeight="Bold" FontSize="30" TextAlignment="Center"/>

        <!-- Main Content Area with SplitView -->
        <SplitView Grid.Row="1"
                   PanePlacement="Left"
                   DisplayMode="Inline"
                   IsPaneOpen="True"
                   OpenPaneLength="350"
                   PaneBackground= "#144039"
                   Background ="#D7D9CE">
            <!-- The Collapsible/Expandable Pane -->
            
            <SplitView.Pane>
              <StackPanel Margin="20">
                <TextBlock Grid.Row="0"
                        FontWeight="Bold"
                        FontSize="30"
                        HorizontalAlignment="Center"
                        Margin="10"
                        TextElement.Foreground="#D7D9CE">
                    <Run Text="{Binding Player1.Firstname}"  />
                    <Run Text="{Binding Player1.Lastname}" />
                </TextBlock>
                <TextBlock Text="BLACK" Margin="5,15,5,5" Padding="5" FontWeight="Bold" FontSize="20" TextAlignment="Center" TextElement.Foreground="#D7D9CE"/>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center" >
                  <TextBox  Text="" Width="20" Height="40" TextElement.Foreground="#D7D9CE" TextElement.FontSize="20" TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                  <TextBlock Text="-->" Margin="5" Padding="5" FontWeight="Bold" FontSize="20" TextAlignment="Center" TextElement.Foreground="#D7D9CE"/>
                  <TextBox Text="" Width="30" Height="40" TextElement.Foreground="#D7D9CE" TextElement.FontSize="20" TextElement.FontWeight="Bold"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center">
                </StackPanel>
              </StackPanel>
            </SplitView.Pane>

            <!-- The Main Content -->
            <SplitView.Content>
                <StackPanel Margin="20">
                <TextBlock Grid.Row="0"
                        FontWeight="Bold"
                        FontSize="30"
                        HorizontalAlignment="Center"
                        Margin="10">
                    <Run Text="{Binding Player2.Firstname}"  />
                    <Run Text="{Binding Player2.Lastname}" />
                </TextBlock>
                <TextBlock Text="WHITE" Margin="5,15,5,5" Padding="5" FontWeight="Bold" FontSize="20" TextAlignment="Center" TextElement.Foreground="#144039"/>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center" >
                  <TextBox  Text="" Width="20" Height="40" TextElement.Foreground="#144039" TextElement.FontSize="20" TextElement.FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                  <TextBlock Text="-->" Margin="5" Padding="5" FontWeight="Bold" FontSize="20" TextAlignment="Center" TextElement.Foreground="#144039"/>
                  <TextBox Text="" Width="30" Height="40" TextElement.Foreground="#144039" TextElement.FontSize="20" TextElement.FontWeight="Bold"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center">
                </StackPanel>
              </StackPanel>
            </SplitView.Content>
        </SplitView>
    </Grid>
    <Button Command="" Margin = "5,15,5,5" HorizontalAlignment="Center" Height="40" Width="200" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
				SAVE
				</Button>
    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,0">
                <TextBlock Text="WINNER:" Margin="5,5,5,1" Padding="5" FontWeight="Bold" FontSize="30" />
                <TextBlock Margin="10,10,0,0" FontSize="30" FontWeight="Bold">
                  <Run Text="{Binding Winner.Firstname}" />
                  <Run Text="{Binding Winner.Lastname}" />
                </TextBlock>
    </StackPanel>
        <Button Command="{Binding EditMatchCommand}" HorizontalAlignment="Stretch" Height="50" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
				SAVE MATCH
				</Button>
  </StackPanel>
  
</Window>
